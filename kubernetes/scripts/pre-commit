#!/bin/bash
# Block committing unencrypted secrets

# Find yaml files under "secrets/" that are staged for commit
files=$(git diff --cached --name-only --diff-filter=ACM | grep 'secrets/.*\.yaml$')

if [ -z "$files" ]; then
  exit 0
fi

for file in $files; do
  if ! grep -q '^sops:' "$file"; then
    echo "‚ùå ERROR: $file does not contain a 'sops:' block (unencrypted?)"
    echo "üëâ Use: sops $file"
    exit 1
  fi
done

exit 0
